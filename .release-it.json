{
  "plugins": {
    "release-it-pnpm": {}
  },
  "hooks": {
    "after:bump": "cat ./app.json | jq '.expo.version |= `${version}`'",
    "before:git:push": "sh ./dist/build.sh"
  },
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "${version}"
  },
  "github": {
    "release": true,
    "draft": true,
    "web": true,
    "autogenerate": true,
    "assets": [
      "./dist/releases/${version}/*"
    ]
  }
}
