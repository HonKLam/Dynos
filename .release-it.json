{
  "hooks": {
    "after:bump": "cat app.json | jq '.expo.version |= \"v${version}\"' > app.tmp && mv app.tmp app.json"
  },
  "git": {
    "requireCleanWorkingDir": true,
    "tag": true,
    "tagName": "v${version}",
    "commit": true,
    "push": true,
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": true,
    "web": true,
    "autoGenerate": true
  }
}
